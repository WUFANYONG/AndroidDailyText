<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chs.androiddailytext.MainActivity"
    android:orientation="vertical"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="6.0权限"
          android:onClick="permission"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="自定义view"
          android:onClick="ViewActivity"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="动画"
          android:onClick="AnimatorActivity"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="下拉刷新"
          android:onClick="pullRefreshActivity"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
   </LinearLayout>
   <com.chs.androiddailytext.widget.RulerView
       android:layout_width="match_parent"
       android:layout_height="80dp"
       />
   <com.chs.androiddailytext.widget.RulerView1
       android:layout_width="match_parent"
       android:layout_height="80dp"
       />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="图表"
          android:onClick="toChart"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="策略模式"
          android:onClick="toStrategy"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="换肤"
          android:onClick="toChnageSkin"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="okhttp"
          android:onClick="okHttp"
          android:textAllCaps="false"
          />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="retrofit"
          android:onClick="toRetrofit"
          android:textAllCaps="false"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="glide"
          android:onClick="toGlide"
          android:textAllCaps="false"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="statistic"
          android:onClick="toStatistic"
          android:textAllCaps="false"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="barchart"
          android:onClick="toBarchart"
          android:textAllCaps="false"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="dagger"
          android:onClick="toDagger"
          android:textAllCaps="false"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="treelist"
          android:onClick="toList"
          android:textAllCaps="false"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="toPicCanvas"
          android:onClick="toPicCanvas"
          android:textAllCaps="false"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="toPop"
          android:onClick="toPop"
          android:textAllCaps="false"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <TextView
          android:id="@+id/tv_content"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="xx"
          />
      <TextView
          android:id="@+id/tv_content1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dp10"
          android:text="xx"
          />
      <com.chs.androiddailytext.widget.PathDivision
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:layout_marginLeft="@dimen/dp20"
          />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="login"
          android:onClick="toLogin"
          android:textAllCaps="false"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="register"
          android:onClick="toRegister"
          android:textAllCaps="false"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="netease"
          android:onClick="toNetease"
          android:textAllCaps="false"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="jetpack"
          android:onClick="toKotlin"
          android:textAllCaps="false"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="仿写"
          android:onClick="toImitation"
          android:textAllCaps="false"
          />
   </LinearLayout>
</LinearLayout>
